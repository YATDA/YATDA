{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "babel"
    ],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-template-curly-in-string": "warn",
        "array-callback-return": "error",
        "class-methods-use-this": "error",
        "complexity": "warn",
        "consistent-return": "warn",
        "curly": "error",
        "default-case": "error",
        "dot-location": [
            "error",
            "property"
        ],
        "dot-notation": "error",
        "eqeqeq": "error",
        "no-alert": "warn",
        "no-else-return": "warn",
        "no-empty-function": "warn",
        "no-eval": "error",
        "no-extra-bind": "warn",
        "no-implicit-globals": "error",
        "no-implied-eval": "error",
        "babel/no-invalid-this": "error",
        "no-loop-func": "error",
        "no-magic-numbers": "error",
        "no-multi-spaces": "error",
        "no-multi-str": "error",
        "no-new": "error",
        "no-new-func": "error",
        "no-new-wrappers": "error",
        "no-return-assign": "error",
        "no-self-compare": "error",
        "no-sequences": "error",
        "no-throw-literal": "error",
        "no-unused-expressions": "error",
        "no-useless-call": "error",
        "no-useless-concat": "error",
        "no-useless-return": "error",
        "no-void": "error",
        "no-warning-comments": "warn",
        "no-with": "error",
        "yoda": [
            "error",
            "never",
            {
                "onlyEquality": true
            }
        ],
        "strict": [
            "error",
            "global"
        ],
        "no-undef-init": "error",
        "no-undefined": "error",
        "no-use-before-define": "error",
        "no-new-require": "error",
        "no-path-concat": "error",
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "block-spacing": "error",
        "brace-style": "error",
        "camelcase": "error",
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "comma-style": [
            "error",
            "last"
        ],
        "consistent-this": [
            "error",
            "self"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "func-call-spacing": "error",
        "indent": [
            "error",
            2
        ],
        "jsx-quotes": "error",
        "key-spacing": "error",
        "linebreak-style": "error",
        "max-len": [
            "error",
            80,
            2,
            {
                "ignorePattern": "^import\\s.+\\sfrom\\s.+;$|^\\s*const\\s.+=\\s*require\\(.+\\);$",
                "ignoreUrls": true
            }
        ],
        "max-statements-per-line": "error",
        "new-cap": "error",
        "new-parens": "error",
        "no-lonely-if": "error",
        "no-new-object": "error",
        "no-tabs": "error",
        "no-trailing-spaces": "error",
        "no-underscore-dangle": "error",
        "no-unneeded-ternary": "error",
        "no-whitespace-before-property": "error",
        "object-curly-spacing": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": "error",
        "semi-spacing": "error",
        "semi-style": "error",
        "sort-keys": "error",
        "space-before-blocks": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "space-in-parens": "error",
        "space-infix-ops": "error",
        "spaced-comment": "error",
        "switch-colon-spacing": "error",
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "arrow-spacing": "error",
        "generator-star-spacing": "error",
        "no-confusing-arrow": "error",
        "no-duplicate-imports": "error",
        "no-useless-computed-key": "error",
        "no-useless-constructor": "error",
        "no-useless-rename": "error",
        "no-var": "error",
        "prefer-const": "error",
        "sort-imports": "error"
    }
}